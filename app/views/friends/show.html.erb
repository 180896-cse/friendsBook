<p style="color: green"><%= notice %></p>
<div class="jumbotron">
  <h1 class="display-4">Friend</h1>
  <p class="lead">FirstName: <%= @friend.first_name %></p>
  <hr class="my-4">
  <p>LastName: <%= @friend.last_name %></p>
  <p>Email: <%= @friend.email %></p>
  <p>Twitter: <%= @friend.twitter %></p>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-info" %> |
  <%= link_to "Back to friends", friends_path, class: "btn btn-dark" %>
  <br><br>
  <%= button_to "Destroy this friend", @friend, method: :delete , class:"btn btn-danger" %>
</div>


